---
import Layout from '@layouts/Default.astro';
import RecentBlogPosts from '@components/generic/RecentBlogPosts.astro';
import MobileSocials from '@components/home/MobileSocials.astro';
import {Pill} from '@eliancodes/brutal-ui';
import {Button} from '@eliancodes/brutal-ui';
import {Card} from '@eliancodes/brutal-ui';
---

<Layout
        title='Home'
        pageTitle='Bartosz Markowski Techblog |Â Home'
        description="Learning from challenges: A fullstack developer's notebook."
>
    <main class='bg-pink p-6'>
        <MobileSocials/>
        <section id='about' class='grid md:grid-cols-8 gap-8 mt-4'>
            <h2 class='hidden'>About Brutal</h2>
            <div class='col-span-4'>
                <Card>
                    <div class='flex flex-col justify-between items-start gap-4'>
                        <p class='mt-4 outfit text-2xl md:text-5xl lg:text-7xl'>
                            Bartosz Markowski Techblog
                        </p>
                        <p class='mt-2 outfit text-xl md:text-3xl lg:text-5xl'>
                          Learning from challenges: A fullstack developer's notebook.
                        </p>
                        <Button target={'_self'} href='/blog/'>
                            Check out the blog &rarr;
                        </Button>
                    </div>
                </Card>
            </div>
            <div class='col-span-4'>
                <Card>
                    <h2 class='text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif'>
                        Who is Bartosz Markowski?
                    </h2>
                    <p class='poppins'>
                        I am Bartosz Markowski, a seasoned software developer with 10 years of experience in the
                        industry. As a fullstack developer, I work with multiple programming languages including Java,
                        Kotlin, JavaScript/TypeScript, Ruby, and Elixir. My extensive expertise allows me to handle both
                        frontend and backend development, making me a well-rounded professional in software engineering.
                        I am particularly passionate about functional programming and have a special fondness for
                        Kotlin, appreciating its modern features and functional programming capabilities. My experience
                        with Elixir further demonstrates my commitment to functional programming principles.
                    </p>
                </Card>
            </div>
        </section>
        <RecentBlogPosts/>
    </main>
</Layout>
